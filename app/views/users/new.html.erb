<h1>Sign Up</h1>
<%= form_for @user do |f| %>
  <% if @users.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @users.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p class="button"><%= f.submit %></p>
<% end %>
